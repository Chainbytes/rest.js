{
  "authentication": {
    "getToken": {
      "method": "POST",
      "params": {
        "mac": {
          "required": true,
          "type": "string"
        },
        "secret": {
          "required": true,
          "type": "string"
        }
      },
      "url": "/authenticate?mac=:mac&secret=:secret"
    }
  },
  "heartbeat": {
    "send": {
      "method": "POST",
      "params": {
        "Backend": {
          "required": true,
          "type": "string"
        },
        "CurrentRecyclerCash": {
          "required": true,
          "type": "object"
        },
        "Dataset": {
          "required": true,
          "type": "string"
        },
        "Firmware": {
          "required": true,
          "type": "string"
        },
        "HeartTime": {
          "required": true,
          "type": "string"
        },
        "Hostname": {
          "required": true,
          "type": "string"
        },
        "lastNV200": {
          "required": true,
          "type": "string"
        },
        "Latitude": {
          "required": true,
          "type": "string"
        },
        "LocalVersion": {
          "required": true,
          "type": "string"
        },
        "Longitude": {
          "required": true,
          "type": "string"
        },
        "PublicIp": {
          "required": true,
          "type": "string"
        },
        "publicKey": {
          "required": true,
          "type": "string"
        },
        "TimezoneOffset": {
          "required": true,
          "type": "string"
        },
        "Version": {
          "required": true,
          "type": "string"
        },
        "VPNIp": {
          "required": true,
          "type": "string"
        }
      },
      "url": "/heartbeat"
    }
  },
  "customer": {
    "create": {
      "method": "POST",
      "url": "/customer"
    },
    "read": {
      "method": "GET",
      "params": {
        "customerKey": {
          "required": true,
          "type": "string"
        }
      },
      "url": "/customer/:customerKey"
    },
    "update": {
      "method": "POST",
      "params": {
        "customerKey": {
          "required": true,
          "type": "string"
        }
      },
      "url": "/customer/:customerKey"
    }
  },
  "config": {
    "read": {
      "method": "GET",
      "params": {},
      "url": "/config"
    },
    "update": {
      "method": "POST",
      "params": {},
      "url": "/config/update"
    }
  }
}